{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": false,
    "sourceMap": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es2015"],
    "moduleResolution": "node",    
    "preserveConstEnums": true,
    "removeComments": true
  },
  "defaultSeverity": "error",
  "include": ["src/**/*.ts", "index.ts", "src/lib/test.js"],
  "exclude": [
    "node_modules",
    "node_modules/**",
    "**/*.spec.ts",
    "**/*.test.ts",
    "dist",
    ".vscode"
  ],
  "excludeTypes": ["types/node"]
}
